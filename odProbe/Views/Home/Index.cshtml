@model IEnumerable<odProbe.Models.FeatureType>
@{
    ViewBag.Title = "Index";

    var grid = new WebGrid(
                            source: Model, 
                            rowsPerPage: 20,
                            defaultSort: "Title");
}

<h2>City of Asheville Open Data</h2>
<div>
    @grid.GetHtml(
        tableStyle: "grid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Title"),
            grid.Column("Name", format: @<text>@Html.ActionLink((string)item.Name, "CsvData", "Wfs", 
                                                new { 
                                                        title = item.Title,
                                                        name = item.Name,
                                                        @abstract = item.Abstract,
                                                        defaultSRS = item.DefaultSRS,
                                                        keywords = item.Keywords
                                                    }, null)</text>),
            grid.Column("Abstract")
        )
    )
</div>
