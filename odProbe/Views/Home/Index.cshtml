@model IEnumerable<odProbe.Models.FeatureType>
@{
    ViewBag.Title = "Index";

    var grid = new WebGrid(
                            source: Model, 
                            rowsPerPage: 20,
                            defaultSort: "Title");
}

<h2>Index</h2>
<div>
    @grid.GetHtml(
        tableStyle: "grid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Title"),
            grid.Column("Name", format: @<text>@Html.ActionLink((string)item.Name,
 
            "CsvData", "Wfs", new {id=item.Title}, null)</text>),
            grid.Column("Abstract")
        )
    )
</div>
